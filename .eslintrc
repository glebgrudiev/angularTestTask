{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jquery": true
    },
    "globals": {
        "angular": true
    },
    "rules": {
        "quotes": ["error", "single"],
        "indent": ["warn", 4, {"SwitchCase": 1}],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "comma-dangle": ["error", "never"],
        "no-console": "off",
        "no-unused-vars": "warn",
        "strict": ["error", "global"],
        "eqeqeq": ["error", "always"]
    }
}
